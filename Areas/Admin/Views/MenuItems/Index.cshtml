@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Index";
}

<div class="whiteBackground border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Menu Items List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <div>
        @if (Model.Count() == 0)
        {<p class="text-danger">No Menu Items........</p>}
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.SubCategory)
                    </th>
                   
                    <th>


                    </th>
                    <th></th>

                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.SubCategory.Name)
                </td>

                <td>
                   <img src="@item.Image" width="50"/>
                </td>
                <td style="width:150px">
                    <partial name="_OpretionButtonPartial" model="item.Id" />
                </td>
            </tr>
                }
            </table>
        }
    </div>
</div>

